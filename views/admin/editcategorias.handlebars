{{#each erros}}
    <div class = "alert alert-danger">{{texto}}</div>    
    {{else}}
{{/each}}
<div class="container mt-4">
    <div class = "card">
        <div class="card-body">
            <form action="/admin/categorias/edit" method="POST" >
               
                <input type="hidden" name="id" value="{{categoria._id}}">
               
                <label for="nome"> Nome:</label>
                <input type="text" class="form-control" name ="nome" value="{{categoria.nome}}" />
                
                <br/>

                <label for="slug"> Slug:</label>
                <input type="text" class="form-control " name="slug" value="{{categoria.slug}}"/>

                <button class="btn btn-primary mt-4" type="submit">Editar Item</button>
            </form>
        </div>
    </div>
</div>