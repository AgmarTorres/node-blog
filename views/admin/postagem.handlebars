<h2> Lista de postangens: <h2>

<hr>

<a href = "/admin/postagens/add"> <button class= "btn btn-success"> Nova postagens </button> </a>

{{#each postagens}}
        <div class="card mt-4">
            <div class="card-body">
                <h2 class="title">Título: {{titulo}}</h2>
                <p class="conteudo">Conteúdo: {{conteudo}}</p>
                <small>Data: {{data}}</small>
                {{categoria.nome}}
                
        		<a href= "/admin/postagens/edit/{{_id}}"> <button class = "btn btn-success mt-4">  Editar postagem </button> </a>
               <form action='/admin/postagem/deletar' method="POST">
                    <input type="hidden" name="id" value="{{_id}}" />
                    <button type="submit" class="btn btn-danger mt-3" >DELETAR</button>
                </form>
            </div>
        </div>
    {{else}}

{{/each}}